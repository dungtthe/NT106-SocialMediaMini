<Page x:Class="Client.Views.Profile.Pages.ProfilePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Profile.Pages"
      mc:Ignorable="d" 
      Width="1628"
      Height="991">
    <Border Background="{DynamicResource ColorGreyOne}" CornerRadius="10" Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>    
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource ColorBlackThree}" CornerRadius="10 10 0 0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> 
                        <ColumnDefinition Width="*"/>   
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <Ellipse Width="150" Height="150" >
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/Images/meolag.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Button Width="30"
                            Height="30"
                            Margin="10,5,0,0"
                            Padding="0"
                            Background="{DynamicResource ColorWhiteOne}"
                            BorderBrush="Transparent"
                            Click="EditAvatarButton_Click">     
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                        CornerRadius="15" 
                                        Width="30" Height="30"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Image Width="16" Height="16" Source="/Resources/Icons/PenBlack_Icon.png" 
                                         VerticalAlignment="Center" HorizontalAlignment="Center"/>    
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Thông tin cá nhân ngang hàng -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,10,0" Grid.ColumnSpan="2">
                        <UniformGrid Columns="2" Rows="4" Margin="0,0,0,10" HorizontalAlignment="Stretch">

                            <!-- FullName -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Họ và tên:" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource ColorWhiteOne}" />
                                <TextBlock Text="[FullName]" FontSize="22" Foreground="{DynamicResource ColorWhiteOne}" />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Email:" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource ColorWhiteOne}" />
                                <TextBlock Text="[Email]" FontSize="22" Foreground="{DynamicResource ColorWhiteOne}" />
                            </StackPanel>

                            <!-- PhoneNumber -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Số điện thoại:" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource ColorWhiteOne}" />
                                <TextBlock Text="[PhoneNumber]" FontSize="22" Foreground="{DynamicResource ColorWhiteOne}" />
                            </StackPanel>

                            <!-- Address -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Địa chỉ:" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource ColorWhiteOne}" />
                                <TextBlock Text="[Address]" FontSize="22" Foreground="{DynamicResource ColorWhiteOne}" />
                            </StackPanel>

                            <!-- Gender -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Giới tính:" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource ColorWhiteOne}" />
                                <TextBlock Text="[Gender]" FontSize="22" Foreground="{DynamicResource ColorWhiteOne}" />
                            </StackPanel>

                            <!-- DateOfBirth -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Ngày sinh:" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource ColorWhiteOne}" />
                                <TextBlock Text="[DateOfBirth]" FontSize="22" Foreground="{DynamicResource ColorWhiteOne}" />
                            </StackPanel>

                        </UniformGrid>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Khu vực bài post -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Bài viết" FontSize="24" FontWeight="Bold" Margin="0,30,0,10" Foreground="{DynamicResource ColorBlackTwo}"/>
                    <Border Background="{DynamicResource ColorGreyThree}" CornerRadius="5" Padding="10" Height="400">
                        <TextBlock Text="Nơi hiển thị các bài post của người dùng..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource ColorBlackOne}"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>