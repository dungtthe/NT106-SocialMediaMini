<Page
    x:Class="Client.Views.Profile.Pages.ProfilePageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.Profile.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1628"
    Height="991"
    mc:Ignorable="d">
    <Border
        Margin="20"
        Background="{DynamicResource ColorGreyOne}"
        CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="20"
                Background="{DynamicResource ColorBlueFour}"
                CornerRadius="10 10 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <Ellipse Width="150" Height="150">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/Images/meolag.jpg" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <Button
                            Width="30"
                            Height="30"
                            Margin="10,5,0,0"
                            Padding="0"
                            Background="{DynamicResource ColorWhiteOne}"
                            BorderBrush="Transparent">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="15">
                                        <Image
                                            Width="16"
                                            Height="16"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="/Resources/Icons/PenBlack_Icon.png" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!--  Thông tin cá nhân ngang hàng  -->
                    <StackPanel
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="20,0,10,0"
                        VerticalAlignment="Center">
                        <UniformGrid
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Columns="2"
                            Rows="4">

                            <!--  Họ và tên  -->
                            <StackPanel Margin="10">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Họ và tên:" />
                                <TextBlock
                                    FontSize="22"
                                    Foreground="Black"
                                    Text="[FullName]" />
                            </StackPanel>

                            <!--  Email  -->
                            <StackPanel Margin="10">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Email:" />
                                <TextBlock
                                    FontSize="22"
                                    Foreground="Black"
                                    Text="[Email]" />
                            </StackPanel>

                            <!--  Số điện thoại  -->
                            <StackPanel Margin="10">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Số điện thoại:" />
                                <TextBlock
                                    FontSize="22"
                                    Foreground="Black"
                                    Text="[PhoneNumber]" />
                            </StackPanel>

                            <!--  Địa chỉ  -->
                            <StackPanel Margin="10">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Địa chỉ:" />
                                <TextBlock
                                    FontSize="22"
                                    Foreground="Black"
                                    Text="[Address]" />
                            </StackPanel>

                            <!--  Giới tính  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Left"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Giới tính:" />
                                <ComboBox
                                    x:Name="GenderCombo"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Background="White"
                                    BorderBrush="Gray"
                                    FontSize="20"
                                    Foreground="Black"
                                    SelectedIndex="0">
                                    <ComboBoxItem
                                        Background="White"
                                        Content="Nam"
                                        Foreground="Black" />
                                    <ComboBoxItem
                                        Background="White"
                                        Content="Nữ"
                                        Foreground="Black" />
                                    <ComboBoxItem
                                        Background="White"
                                        Content="Khác"
                                        Foreground="Black" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Ngày sinh  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Left"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Ngày sinh:" />
                                <DatePicker
                                    x:Name="DatePickerDOB"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Background="White"
                                    BorderBrush="Gray"
                                    FontSize="20"
                                    Foreground="Black" />
                            </StackPanel>
                        </UniformGrid>

                        <!--  Nút chỉnh sửa  -->
                        <Button
                            Width="220"
                            Height="45"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource ColorBlueOne}"
                            Content="Chỉnh sửa thông tin"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>


            <!--  Khu vực bài post  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="0,20,0,0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock
                        Margin="0,30,0,10"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ColorBlackTwo}"
                        Text="Bài viết" />
                    <Border
                        Height="400"
                        Padding="10"
                        Background="{DynamicResource ColorGreyThree}"
                        CornerRadius="5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource ColorBlackOne}"
                            Text="Nơi hiển thị các bài post của người dùng..." />
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>