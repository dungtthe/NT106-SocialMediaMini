<Page x:Class="Client.Views.Profile.Pages.ProfilePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Profile.Pages"
      mc:Ignorable="d" 
      Width="1628"
      Height="991">
    <Border Background="{DynamicResource ColorGreyOne}" CornerRadius="10" Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>    
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource ColorBlueFour}" CornerRadius="10 10 0 0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <Ellipse Width="150" Height="150" >
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/Images/meolag.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Button Width="30"
                    Height="30"
                    Margin="10,5,0,0"
                    Padding="0"
                    Background="{DynamicResource ColorWhiteOne}"
                    BorderBrush="Transparent"
                    Click="EditAvatarButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                CornerRadius="15" 
                                Width="30" Height="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                        <Image Width="16" Height="16" Source="/Resources/Icons/PenBlack_Icon.png" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Thông tin cá nhân ngang hàng -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,10,0" Grid.ColumnSpan="2">
                        <UniformGrid Columns="2" Rows="4" Margin="0,0,0,10" HorizontalAlignment="Stretch">

                            <!-- Họ và tên -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Họ và tên:" FontSize="22" FontWeight="Bold" Foreground="Black" />
                                <TextBlock Text="[FullName]" FontSize="22" Foreground="Black" />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Email:" FontSize="22" FontWeight="Bold" Foreground="Black" />
                                <TextBlock Text="[Email]" FontSize="22" Foreground="Black" />
                            </StackPanel>

                            <!-- Số điện thoại -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Số điện thoại:" FontSize="22" FontWeight="Bold" Foreground="Black" />
                                <TextBlock Text="[PhoneNumber]" FontSize="22" Foreground="Black" />
                            </StackPanel>

                            <!-- Địa chỉ -->
                            <StackPanel Margin="10">
                                <TextBlock Text="Địa chỉ:" FontSize="22" FontWeight="Bold" Foreground="Black" />
                                <TextBlock Text="[Address]" FontSize="22" Foreground="Black" />
                            </StackPanel>

                            <!-- Giới tính -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <TextBlock Text="Giới tính:" FontSize="22" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                                <ComboBox x:Name="GenderCombo"
                              Width="200"
                              FontSize="20"
                              SelectedIndex="0"
                              Foreground="Black"
                              Background="White"
                              BorderBrush="Gray"
                              HorizontalAlignment="Left">
                                    <ComboBoxItem Content="Nam" Foreground="Black" Background="White"/>
                                    <ComboBoxItem Content="Nữ" Foreground="Black" Background="White"/>
                                    <ComboBoxItem Content="Khác" Foreground="Black" Background="White"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Ngày sinh -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <TextBlock Text="Ngày sinh:" FontSize="22" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                                <DatePicker x:Name="DatePickerDOB"
                                Width="200"
                                FontSize="20"
                                HorizontalAlignment="Left"
                                Foreground="Black"
                                Background="White"
                                BorderBrush="Gray"/>
                            </StackPanel>
                        </UniformGrid>

                        <!-- Nút chỉnh sửa -->
                        <Button Content="Chỉnh sửa thông tin"
                    Width="220"
                    Height="45"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource ColorBlueOne}"
                    Foreground="White"
                    Click="EditProfileButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>


            <!-- Khu vực bài post -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Bài viết" FontSize="24" FontWeight="Bold" Margin="0,30,0,10" Foreground="{DynamicResource ColorBlackTwo}"/>
                    <Border Background="{DynamicResource ColorGreyThree}" CornerRadius="5" Padding="10" Height="400">
                        <TextBlock Text="Nơi hiển thị các bài post của người dùng..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource ColorBlackOne}"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>