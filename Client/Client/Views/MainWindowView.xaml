<Window
    x:Class="Client.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1700"
    Height="1020"
    d:DesignHeight="1020"
    d:DesignWidth="1700"
    AllowsTransparency="True"
    Background="Transparent"
    DataContext="{StaticResource MainWindowViewModel}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <!--  Title bar  -->
        <Border
            Width="1629"
            Height="29"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{DynamicResource ColorGreyOne}"
            CornerRadius="0,5,0,0">

            <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal">
                <Button
                    x:Name="btnClose"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="btnClose_Click">
                    <Image
                        Width="13"
                        Height="13"
                        Source="/Resources/Icons/iconclose.png" />
                </Button>
                <Button Background="Transparent" BorderThickness="0">
                    <Image
                        Width="13"
                        Height="13"
                        Source="/Resources/Icons/iconmaxsize.png" />
                </Button>

                <Button Background="Transparent" BorderThickness="0">
                    <Image
                        Width="13"
                        Height="13"
                        Source="/Resources/Icons/iconmsize.png" />
                </Button>
            </StackPanel>
        </Border>
        <!--  Slider bar  -->
        <Border
            Width="72"
            Height="1020"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{DynamicResource ColorBlueOne}"
            CornerRadius="5,0,0,5">
            <StackPanel>
                <!--  Avatar  -->
                <Ellipse
                    Width="45"
                    Height="45"
                    Margin="11,20,11,30">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding Avatar}" />
                    </Ellipse.Fill>
                </Ellipse>
                <!--  Chat Button  -->
                <Button
                    x:Name="ChatButton"
                    Width="50"
                    Height="50"
                    Margin="11,0,11,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="ChatButton_Click"
                    Cursor="Hand">
                    <Button.Content>
                        <!--  Chat Icon (Speech Bubble)  -->
                        <Image
                            Width="24"
                            Height="24"
                            RenderTransformOrigin="0.5,0.5"
                            Source="/Resources/Icons/chat.png"
                            Stretch="Uniform">
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Image.RenderTransform>
                        </Image>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  Blog Button  -->
                <Button
                    x:Name="BlogButton"
                    Width="50"
                    Height="50"
                    Margin="11,0,11,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BlogButton_Click"
                    Cursor="Hand">
                    <Button.Content>
                        <!--  Blog Icon (Document)  -->
                        <Image
                            Width="24"
                            Height="24"
                            RenderTransformOrigin="0.5,0.5"
                            Source="/Resources/Icons/post.png"
                            Stretch="Uniform">
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Image.RenderTransform>
                        </Image>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!--  Page-content  -->
        <Border
            Width="1628"
            Height="991"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{DynamicResource ColorWhiteOne}"
            CornerRadius="0,0,5,0">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
        </Border>
    </Grid>
</Window>