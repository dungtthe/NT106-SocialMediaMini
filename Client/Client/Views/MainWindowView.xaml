<Window
    x:Class="Client.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1700"
    Height="1020"
    d:DesignHeight="1020"
    d:DesignWidth="1700"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <!-- Title bar -->
        <Border
    Width="1629"
    Height="29"
    HorizontalAlignment="Right"
    VerticalAlignment="Top"
    Background="{DynamicResource ColorGreyOne}"
    CornerRadius="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Minimize Button -->
                <Button
            x:Name="MinimizeButton"
            Grid.Column="1"
            Width="40"
            Height="29"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="MinimizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <Image
                            Width="24"
                            Height="24"
                            Source="/Resources/Icons/minimize.png"
                            Stretch="Uniform"
                            RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                    </Image.RenderTransform>
                                </Image>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ColorBlueOne}" />
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Smooth transition -->
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Maximize/Restore Button -->
                <Button
            x:Name="MaximizeButton"
            Grid.Column="2"
            Width="40"
            Height="29"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="MaximizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <Border
                            Margin="2">
                                    <Image
                                Width="24"
                                Height="24"
                                Source="/Resources/Icons/maximize.png"
                                Stretch="Uniform"
                                RenderTransformOrigin="0.5,0.5">
                                        <Image.RenderTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                        </Image.RenderTransform>
                                    </Image>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ColorBlueOne}" />
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Smooth transition -->
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Close Button -->
                <Button
            x:Name="CloseButton"
            Grid.Column="3"
            Width="40"
            Height="29"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <Image
                            Width="24"
                            Height="24"
                            Source="/Resources/Icons/close.png"
                            Stretch="Uniform"
                            RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                    </Image.RenderTransform>
                                </Image>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ColorBlueOne}" />
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Smooth transition -->
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        <!-- Slider bar -->
        <Border
            Width="72"
            Height="1020"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{DynamicResource ColorBlueOne}"
            CornerRadius="5,0,0,5">
            <StackPanel>
                <!-- Avatar -->
                <Image
                    Source="/Resources/Images/meolag.jpg"
                    Width="50"
                    Height="50"
                    Margin="11,20,11,30"
                    RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect ShadowDepth="2" 
                                         BlurRadius="5" 
                                         Opacity="0.3"/>
                    </Image.Effect>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <!-- Chat Button -->
                <Button
                    x:Name="ChatButton"
                    Width="50"
                    Height="50"
                    Margin="11,0,11,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ChatButton_Click">
                    <Button.Content>
                        <!-- Chat Icon (Speech Bubble) -->
                        <Image
                            Width="24"
                            Height="24"
                            Source="/Resources/Icons/chat.png"
                            Stretch="Uniform"
                            RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Image.RenderTransform>
                        </Image>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Blog Button -->
                <Button
                    x:Name="BlogButton"
                    Width="50"
                    Height="50"
                    Margin="11,0,11,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BlogButton_Click">
                    <Button.Content>
                        <!-- Blog Icon (Document) -->
                        <Image
                            Width="24"
                            Height="24"
                            Source="/Resources/Icons/post.png"
                            Stretch="Uniform"
                            RenderTransformOrigin="0.5,0.5">        
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Image.RenderTransform>
                        </Image>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Page-content -->
        <Border
            Width="1628"
            Height="991"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{DynamicResource ColorWhiteOne}"
            CornerRadius="0,0,5,0">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
        </Border>
    </Grid>
</Window>