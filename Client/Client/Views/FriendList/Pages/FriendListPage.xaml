<Page
    x:Class="Client.Views.FriendList.Pages.FriendListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.FriendList.Pages"
    xmlns:models="clr-namespace:Client.Models"
    mc:Ignorable="d"
    Width="1288"
    Height="991"
    d:DesignHeight="991"
    d:DesignWidth="1288"
    Background="#F5F7FA">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourcesXAML/ScrollBar.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Sample Friend List -->
            <x:Array x:Key="FriendList" Type="{x:Type models:UserModel}">
                <models:UserModel FullName="Nguyễn Văn A" Avatar="/Resources/Images/no_img_user.png" />
                <models:UserModel FullName="Nguyễn Văn B" Avatar="/Resources/Images/no_img_user.png" />
                <models:UserModel FullName="Nguyễn Văn C" Avatar="/Resources/Images/no_img_user.png" />
            </x:Array>
            <!-- Converters and Styles -->
            <Style x:Key="FriendCardStyle" TargetType="Border">
                <Setter Property="Background" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Margin" Value="0,0,0,12" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" Opacity="0.15" ShadowDepth="2" Color="#000000" />
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E8F0FE" />
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="12" Opacity="0.25" ShadowDepth="3" Color="#000000" />
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#3B82F6" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#2563EB" />
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="#1E40AF" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Border
            Grid.Row="0"
            Background="White"
            CornerRadius="12"
            Margin="0,0,0,20"
            Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" Opacity="0.15" ShadowDepth="2" Color="#000000" />
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Source="/Resources/Icons/icon-search.png"
                    Width="24"
                    Height="24"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center" />
                <TextBox
                    Grid.Column="1"
                    FontSize="16"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Tag="Tìm kiếm bạn bè...">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" />
                                            <TextBlock
                                                Text="{TemplateBinding Tag}"
                                                FontStyle="Italic"
                                                Foreground="#6B7280"
                                                Margin="2,0,0,0"
                                                VerticalAlignment="Center"
                                                IsHitTestVisible="False">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
        </Border>

        <!-- Friend List -->
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Style="{StaticResource ModernScrollViewerStyle}">
            <ItemsControl
                ItemsSource="{StaticResource FriendList}"
                Margin="0,0,0,20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FriendCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!-- Avatar -->
                                <Ellipse
                                    Width="50"
                                    Height="50"
                                    Margin="0,0,15,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Resources/Images/no_img_user.png" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <!-- User Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding FullName}"
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="#111827" />
                                    <TextBlock
                                        Text="Online"
                                        FontSize="12"
                                        Foreground="#6B7280"
                                        Margin="0,2,0,0" />
                                </StackPanel>
                                <!-- Message Button -->
                                <Button
                                    Grid.Column="2"
                                    Content="Nhắn tin"
                                    Style="{StaticResource ButtonStyle}"
                                    Margin="0,0,10,0" />
                                <!-- More Button -->
                                <Button
                                    Grid.Column="3"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                                <Image
                                                    Source="/Resources/Icons/More.png"
                                                    Width="20"
                                                    Height="20"
                                                    Stretch="Uniform" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E5E7EB" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>